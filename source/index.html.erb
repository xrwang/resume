<!DOCTYPE html>
<html lang="en">
  <head>
    <title>resume-<%= Time.now.to_i %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=PT+Mono&display=swap" rel="stylesheet">
    <link href="style.css" rel="stylesheet" />
  </head>

  <body>

    <header>
      <div>
        <h1><%= data.resume.name %></h1>
        <h2>
      </div>
      <p>
        <%= data.resume.location %>
        <br />
        <%= data.resume.phone %>
        <br />
        <%= data.resume.email %>
      </p>
      <p>
        <%= data.resume.website %>
        <br />
        github: <%= data.resume.github %>
        <br />
        linkedin: <%= data.resume.linkedin %>
      </p>
    </header>

    <section>
      <h1>Education</h1>
      <section>
        <%- data.resume.education.each do |edu| %>
          <section>
            <h1><%= edu.school %></h1>
            <p><%= edu.location %></p>
            <p><%= edu.year %>, <%= edu.degree %>, <%= edu.focus %></p>
          </section>
        <%- end %>
      </section>
    </section>

    <section>
      <h1>Projects &amp; Publications</h1>
      <section>
        <%- data.resume.projects.each do |project| %>
          <section>
            <h1><%= project.title %></h1>
            <h3><%= project.url %></h3>
            <p><%= project.collaborators %>, <%= project.date %></p>
            <p><%= project.description %></p>
          </section>
        <%- end %>
      </section>
    </section>

    <section>
      <h1>Teaching Experience</h1>
      <section>
        <%- data.resume.teaching.each do |v| %>
          <section>
            <h1><%= v.organization %></h1>
            <p><em><%= v.title %></em>, <%= v.date %>, <%= v.location %></p>
          </section>
        <%- end %>
      </section>
    </section>

    <section>
      <h1>Grants &amp; Awards</h1>
      <section>
        <%- data.resume.awards.each do |v| %>
          <section>
            <h1><%= v.organization %></h1>
            <p><em><%= v.title %></em>, <%= v.date %></p>
          </section>
        <%- end %>
      </section>
    </section>

    <section>
      <h1>Research &amp; Fellowships</h1>
      <section>
        <%- data.resume.research.each do |v| %>
          <section>
            <h1><%= v.organization %></h1>
            <p><em><%= v.title %></em>, <%= v.date %></p>
          </section>
        <%- end %>
      </section>
    </section>

    <section>
      <h1>Noted Talks</h1>
      <section>
        <%- data.resume.featuredtalks.each do |talk| %>
          <section>
            <h1><%= talk.title %></h1>
            <p><%= talk.location %>, <%= talk.date %><% if talk.url.present? %>, <%= talk.url %><% end %></p>
          </section>
        <%- end %>
      </section>
    </section>

    <section>
      <h1>Invited Talks, Presentations &amp; Guest Reviews (guest critic for Design and Engineering students)</h1>
      <section>
        <%- data.resume.talks.each do |talk| %>
          <section>
            <h1><%= talk.title %></h1>
            <p><%= talk.description %></p>
          </section>
        <%- end %>
      </section>
    </section>

    <section>
      <h1>Press, Selected Media Coverage &amp; Reviews</h1>
      <section>
        <%- data.resume.press.each do |pub| %>
          <section>
            <h1>&ldquo;<%= pub.title %>&rdquo;</h1>
            <p><%= pub.url %></p>
            <p>by <%= pub.authors %>. <em><%= pub.publisher %></em>, <%= pub.date %></p>
          </section>
        <%- end %>
      </section>
    </section>

    <section>
      <h1>Work Experience</h1>
      <section>
        <%- data.resume.work.each do |position| %>
          <section>
            <h1><%= position.company %></h1>
            <p><em><%= position.title %></em>, <%= position.duration %> &bull; <%= position.location %>
            <p><%= position.description %></p>
          </section>
        <%- end %>
      </section>
    </section>

    <section>
      <h1>Awarded Residencies &amp; Exhibitions</h1>
      <section>
        <%- data.resume.fellowships.each do |v| %>
          <section>
            <h1><%= v.organization %></h1>
            <p><em><%= v.title %></em>, <%= v.date %></p>
          </section>
        <%- end %>
      </section>
    </section>


    <section>
      <h1>Service &amp; Memberships</h1>
      <section>
        <%- data.resume.service.each do |v| %>
          <section>
            <h1><%= v.organization %></h1>
            <p><em><%= v.title %></em><% if v.date.present? %>, <%= v.date %><% end %><% if v.location.present? %> &bull; <%= v.location %><% end %></p>
            <p><%= v.description %></p>
          </section>
        <%- end %>
      </section>
    </section>

  </body>
</html>
